extends layout

block content

  // Modal md
  #modal-md.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
          h1#modal-label.modal-title
        .modal-body
          form(action='/users/login', method='POST')
            h2.text-center Log into Instagram App

            .form-group
              label Email address
              input.form-control(type='email', name='email', placeholder='Email')
            .form-group
              label Password
              input.form-control(type='password', name='password', placeholder='Password')
            .form-group
              a.btn.btn-link.form-control(href='/local-register') Sign up for Instagram App
            button.btn.btn-primary(type='submit') Submit
        .modal-footer
          button.btn.btn-default(type='button', data-dismiss='modal') Close

  include ./includes/footer.jade

  // Log-in/Sign-up modal javascript
  script(type='text/javascript', src='/javascripts/login.js')
